# substitute_wan_switch
#
# syntax of the lines must be: dp dpt
#
substitute_wan_switch()
{
	awk -v WANSWITCHLIST=${WANSWITCHLIST} '
	BEGIN {
		nrWan=split(WANSWITCHLIST, wanname, ":");
	};
	{
		hasWan=index($1,"@wan@_@switch@");
