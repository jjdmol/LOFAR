#
# substitute_Cabinet
#
# syntax of the lines must be: dp dpt
#
substitute_Cabinet()
{
	awk -v nrBoards=${NRRSPBOARDS} '
	{
		hasCabinet=index($1,"@cabinet@");
		if (hasCabinet > 0) {
			for (cabinet=0; cabinet<int((nrBoards+7)/8); cabinet++) {
				dpname=$1;
				sub("@cabinet@", "Cabinet"cabinet, dpname)
				print dpname"	"$2;
			}
		}
		else {
			print $1"	"$2;
		}
	} '
}

