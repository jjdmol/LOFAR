VERSION="v1.0"

# SyntaxError msg
#
SyntaxError()
{
	Msg=$1

	[ -z "${Msg}" ] || echo "ERROR: ${Msg}"
	echo ""
	echo "Syntax: $(basename $0) databasename"
	echo ""
	exit 1
}

#
# MAIN
#

# check invocation syntax
if [ $# -ne 1 ]; then
	SyntaxError
fi

RESULTFILE=PVSSDatapoints.out

rm -f ${RESULTFILE}
echo "Creating PIC file..."
./createPICfile
../../build/gnu_debug/data/bin/load_PICtree $1 ${RESULTFILE}
