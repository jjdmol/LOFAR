par  procesOrder             I    vtext  -      10    0    '[]'							 -	   "Order of the processes, if any! FOR FUTURE USE."
par  extraInfo               I    vtext  -      10    0    '[OLAP,PIC,Correlator]'		 -	   "list of components that the application expects to be in the parsettfile."
par  _hostname               I    text   -      10    0    'localhost'					 -	   "Hostname of the machine on which the ACDaemon is running".
