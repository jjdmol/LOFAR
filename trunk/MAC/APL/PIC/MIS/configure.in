dnl
dnl Process this file with autoconf to produce a configure script.
dnl
AC_INIT(src/MISDaemon.h)
dnl AC_CONFIG_AUX_DIR(config)
dnl AM_CONFIG_HEADER(config/config.h)
AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(MISDaemon, 1.0)

dnl Initialize for LOFAR (may set compilers)
lofar_INIT

dnl Checks for programs.
AC_PROG_AWK
AC_PROG_YACC
AC_PROG_CC
AC_PROG_CXX
AM_PROG_LEX
AC_PROG_INSTALL
AC_PROG_LN_S
AC_DISABLE_SHARED
AC_PROG_LIBTOOL

dnl Checks for libraries.

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_SIZE_T

dnl Checks for library functions.
AC_FUNC_VPRINTF

dnl
dnl Check for LOFAR specific things
dnl
lofar_DEBUG_OPTIMIZE
#lofar_QT
lofar_QATOOLS
lofar_LOG4CPLUS
lofar_DOCXX
lofar_PVSS
lofar_INTERNAL(LCS/Common, common, LCS-Common-2_2, 1, Common/LofarTypes.h,,)
lofar_INTERNAL(MAC/GCF/GCFCommon, gcfcommon, MAC-GCF-5_1, 1, GCF/GCF_Defines.h,,)
lofar_INTERNAL(MAC/GCF/TM, gcftm, MAC-GCF-5_1, 1, GCF/TM/GCF_Task.h,,)
lofar_INTERNAL(MAC/GCF/PAL, gcfpal, MAC-GCF-5_1, 1, GCF/PAL/GCF_PVSSInfo.h,,)
lofar_INTERNAL(MAC/APL/RTCCommon, rtccommon, MAC-APL-3_1, 1, Timestamp.h,,)
lofar_INTERNAL(MAC/APL/PAC/RSP, rsp, MAC-APL-3_1, 1, RSP_Protocol.ph,,)
lofar_EXTERNAL(BLITZ,1,blitz/blitz.h,,,,'gnu3:-Wno-unused gnu3:-ftemplate-depth-30',,-lm)
lofar_EXTERNAL(boost, 1, boost/regex.hpp, "")

dnl
dnl Output Makefiles
dnl
AC_OUTPUT(
src/Makefile
Makefile
)
