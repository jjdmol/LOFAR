//
// Protocol definition for the EPA Demonstrator Board
//
autogen definitions protocol;

description = "Protocol for the EPA Demonstrator Board";
prefix = "EPA"; // for the signal names
id = "(F_APL_PROTOCOL+11)";

// specify extra include files
// e.g.
include = '<sys/time.h>';
include = '<linux/types.h>';
include = '<Common/LofarTypes.h>';
include = '"MEPHeader.h"';

prelude = << PRELUDE_END

/**
 * Protocol constants.
 */
namespace EPA_Protocol
{
  /**
   * Number of Antenna processors and Beamlet processors.
   */
  /*@{*/
  static const int N_RSPBOARDS = 24;
  static const int N_AP        = 4;
  static const int N_BLP       = N_AP*2;
  static const int N_COEF      = 512;
  static const int N_UWG       = 512;
  static const int N_SUBBANDS  = 128;
  static const int N_STATS     = 512;
  /*@}*/
};

PRELUDE_END;

//
// An "event" has a "signal" and a "dir" (direction)
// and zero or more "param"s.
// "dir" can be one of "IN" or "OUT".
// A "param" has a "name" and a "type".
//

event = {
  signal = RSPSTATUS;
  dir = OUT;
  param = {
    name = "hdr";
    type = "EPA_Protocol::MEPHeader";
    userdefined;
  };
  param = {
    name = "rsp";
    type = "uint16";
  };
  param = {
    name = "ap";
    type = "uint16 [N_AP]";
  };
  param = {
    name = "blp";
    type = "uint8[N_BLP]";
  };
  param = {
    name = "eth";
    type = "uint32";
  };
};

event = {
  signal = SELFTEST;
  dir = IN;
  param = {
    name = "hdr";
    type = "EPA_Protocol::MEPHeader";
    userdefined;
  };
  param = {
    name = "test";
    type = "uint8";
  };
};

event = {
  signal = RESET;
