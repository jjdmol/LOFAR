	     << "voltage_33   =" << int(stat.rsp.voltage_33)    << ", " << std::endl
	     << "bp_status    =" << int(stat.fpga.bp_status)    << ", " << std::endl
	     << "bp_temp      =" << int(stat.fpga.bp_temp)      << ", " << std::endl
	     << "ap1_status   =" << int(stat.fpga.ap1_status)   << ", " << std::endl
	     << "ap1_temp     =" << int(stat.fpga.ap1_temp)     << ", " << std::endl
	     << "ap2_status   =" << int(stat.fpga.ap2_status)   << ", " << std::endl
	     << "ap2_temp     =" << int(stat.fpga.ap2_temp)     << ", " << std::endl
	     << "ap3_status   =" << int(stat.fpga.ap3_status)   << ", " << std::endl
	     << "ap3_temp     =" << int(stat.fpga.ap3_temp)     << ", " << std::endl
	     << "ap4_status   =" << int(stat.fpga.ap4_status)   << ", " << std::endl
	     << "ap4_temp     =" << int(stat.fpga.ap4_temp)     << ", " << std::endl
