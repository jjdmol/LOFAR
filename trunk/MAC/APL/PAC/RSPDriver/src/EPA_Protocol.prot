	     << "ap3_rcu.statusy       =" << stat.ap3_rcu.statusy       << ", " << std::endl
	     << "ap3_rcu.nof_overflowx =" << stat.ap3_rcu.nof_overflowx << ", " << std::endl
	     << "ap3_rcu.nof_overflowy =" << stat.ap3_rcu.nof_overflowy << ", " << std::endl
