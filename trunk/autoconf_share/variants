gnu.compiler.conf:
kcc.compiler.conf:
icc.compiler.conf:
xlc.compiler.conf: CXX=blrts_xlC

profile.variant.conf:	  $(aipspp) $(profile) $(mpe)
debug.variant.conf:	  $(debug) $(aipspp) $(mtsupport)
profopt.variant.conf:	  $(profopt) $(aipspp)
opt.variant.conf:	  $(optimize) $(aipspp) $(mtsupport)
debugopt.variant.conf:	  $(debugopt)
mpich.variant.conf:	  $(mpich) $(aipspp)
mpich-opt.variant.conf:	  $(mpich) $(optimize) $(aipspp)
lam.variant.conf:	  $(lam)  $(aipspp)
lam-opt.variant.conf:	  $(lam) $(optimize) $(aipspp)
corba.variant.conf:	  $(vbroker) $(aipspp)
mpich-corba.variant.conf: $(mpich) $(vbroker) $(aipspp)
lam-corba.variant.conf:   $(lam) $(vbroker) $(aipspp)
insure.variant.conf:	  --with-insuretools $(aipspp)
insure.variant.make:	  QA=insure
scampi.variant.conf:	  $(scampi) 
scampi-opt.variant.conf:  $(scampi) $(optimize) 
mpich-prof.variant.conf:  $(mpich) --enable-mpi-profiler $(aipspp)
bgl.variant.conf:         $(debugopt) $(nomtsupport) $(bgl_cpp) $(bgl_ldd)

profile.var:		   --with-optimize='-pg -O2' --with-compiletools --with-ldflags='-lc_p'
mpe.var:		   --with-mpich=/usr/local/mpich-1.2.5/ch_p4 --enable-mpi-profiler
debug.var:		   --with-debug='-g'
debugopt.var:		   --with-optimize='-g -O2'
profopt.var:		   --with-optimize='-pg -O2' --with-ldflags='-lc_p'
optimize.var:		   --with-optimize='-O2'
aipspp.var:
mpich.var:		   --with-mpich
lam.var:		   --with-lam
scampi.var:		   --with-scampi
vbroker.var:		   --with-vbroker
mtsupport.var:		   --with-threads
nomtsupport.var: 	   --with-threads=no  
bgl_cpp.var: --with-cppflags='-D__BLRTS__ -qarch=440d -qinfo=pro:gen -qcpluscmt -I. -qlist -qsource -qmaxmem=64000 -I/BlueLight/floor/bglsys/include/'
bgl_ldd.var: --with-ldflags='-L/BlueLight/floor/bglsys/lib -lmpich.rts -lmsglayer.rts -lrts.rts -ldevices.rts -lstandalone.440 -lm'
