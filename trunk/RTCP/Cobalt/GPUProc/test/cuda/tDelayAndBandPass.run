#!/bin/sh -x

cp ${srcdir}/../../share/gpu/kernels/DelayAndBandPass.cu .
cp ${srcdir}/../../src/cuda/complex.h .

# Check for GPU
if ! lspci | grep -E "VGA|3D" | grep -E "ATI|NVIDIA"
then
  echo "No ATI/NVIDIA graphics cards detected on host `hostname`" \
       "-- aborting test." >&2
  exit 3
fi

./tDelayAndBandPass

