dnl
dnl Process this file with autoconf to produce a configure script.
dnl Do not define VERSION, etc. in config.h.
dnl
AC_INIT
AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(BBSControl, 1.0, no-define)

dnl Initialize for LOFAR (may set compilers)
lofar_INIT

dnl Checks for programs.
AC_PROG_CC
AC_PROG_CXX
AC_PROG_INSTALL
AC_PROG_LN_S
AC_DISABLE_SHARED
AC_PROG_LIBTOOL

dnl Checks for header files.
AC_HEADER_STDC

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_SIZE_T

dnl
dnl Check for LOFAR specific things
dnl
lofar_GENERAL
lofar_MPI

lofar_INTERNAL(LCS/Common,Common,,1,Common/LofarTypes.h)
lofar_INTERNAL(LCS/Blob,Blob,,1,Blob/BlobHeader.h)
lofar_INTERNAL(LCS/Transport,Transport,,1,Transport/TransportHolder.h)
#lofar_INTERNAL(LCS/databases/TransportPostgres,TransportPostgres,,1,TransportPostgres/DH_DB.h)
#lofar_INTERNAL(CEP/tinyCEP,tinyCEP,,1,tinyCEP/WorkHolder.h)
#lofar_INTERNAL(CEP/CEPFrame,CEPFrame,,1,CEPFrame/DataManager.h)
lofar_INTERNAL(LCS/ACC/APS,APS,,1,APS/ParameterSet.h)
lofar_INTERNAL(LCS/ACC/PLC,PLC,,1,PLC/ProcessControl.h)
lofar_INTERNAL(CEP/BB/BBSKernel,BBSKernel,,1,BBSKernel/Prediffer.h)
#lofar_INTERNAL(CEP/BB/ParmDB,ParmDB,,1,ParmDB/ParmDB.h)
#lofar_INTERNAL(CEP/BB/MS,MS,,1,MS/MSDesc.h,bbms)

#lofar_EXTERNAL(psql,1,libpq-fe.h,pq)
#lofar_EXTERNAL(mysql,1,mysql/mysql.h,"z mysqlclient")
#lofar_EXTERNAL(MonetDB,1,MonetDB/C/Mapi.h,"Mapi")
#lofar_EXTERNAL(boost,1,boost/thread.hpp,boost_thread)
#lofar_EXTERNAL(bdb,1,db_cxx.h,"db_cxx")

#lofar_EXTERNAL(boost,1,boost/shared_ptr.hpp,"")
