# the following options can be given:
# -host    Host (default = dop50, this is the host PL uses)
# -user    User

BBHOST="dop50.astron.nl"
BBUSER=`whoami`
PTABLENAME='bbs3parmsolutions'

while [ 1 = 1 ]
do
  if [ "$1" = "-host" ]; then
    shift
    BBHOST="$1"
    shift
  elif [ "$1" = "-user" ]; then
    shift
    BBUSER="$1"
    shift
  elif [ "$1" = "-tablename" ]; then
    shift
    PTABLENAME="$1"
    shift
  else
    break;
  fi
done

SQLCLIENT="psql -h $BBHOST -U postgres $BBUSER"

#create the bb tables
echo " " > sql_create
echo " DROP TABLE bbs3solutions;" >> sql_create
echo " DROP TABLE bbs3woprediffer;" >> sql_create
echo " DROP TABLE bbs3wosolver;" >> sql_create
echo " DROP TABLE $PTABLENAME;" >> sql_create
echo " CREATE TABLE bbs3woprediffer (
       ObjId BIGINT NOT NULL UNIQUE PRIMARY KEY, 
       Owner BIGINT NOT NULL, 
       VersionNr INTEGER NOT NULL, 
       ID INTEGER, 
       TAG INTEGER, 
       SEQNR BIGINT, 
       DATA TEXT, 
       WOID INTEGER,
       SCID INTEGER, 
       STATUS INTEGER, 
       KSTYPE TEXT,
       DONOTHING INTEGER, 
       NEWBASELINES INTEGER, 
       NEWDOMAIN INTEGER,
       NEWSOURCES INTEGER,
       SUBTRACTSOURCES INTEGER, 
       WRITEPREDDATA INTEGER,
       WRITEINDATACOL INTEGER,
       STARTFREQ DOUBLE PRECISION,
       FREQLENGTH DOUBLE PRECISION,
       STARTTIME DOUBLE PRECISION,
       TIMELENGTH DOUBLE PRECISION,
       CLEANUP INTEGER,
       UPDATEPARMS INTEGER,
       SOLUTIONID INTEGER);" >> sql_create
echo " CREATE TABLE bbs3wosolver (
       ObjId BIGINT NOT NULL UNIQUE PRIMARY KEY, 
       Owner BIGINT NOT NULL, 
       VersionNr INTEGER NOT NULL, 
       ID INTEGER, 
       TAG INTEGER, 
       SEQNR BIGINT, 
       DATA TEXT, 
       WOID INTEGER,
       SCID INTEGER, 
       STATUS INTEGER, 
       KSTYPE TEXT,
       ITERATION INTEGER,
       DONOTHING INTEGER,
       NEWDOMAIN INTEGER, 
       USESVD INTEGER,
       CLEANUP INTEGER);" >> sql_create
echo "create table bbs3solutions (
      ObjId BIGINT NOT NULL UNIQUE PRIMARY KEY, 
      Owner BIGINT NOT NULL, 
      VersionNr INTEGER NOT NULL, 
      ID INTEGER, 
      TAG INTEGER, 
      SEQNR BIGINT, 
      DATA TEXT, 
      WOID INTEGER, 
      ITERATION INTEGER,
      FIT DOUBLE PRECISION, 
      RANK INTEGER,
      MU DOUBLE PRECISION, 
      STDDEV DOUBLE PRECISION, 
      CHI DOUBLE PRECISION,
      STARTFREQ DOUBLE PRECISION,
      ENDFREQ DOUBLE PRECISION,
      STARTTIME DOUBLE PRECISION,
      ENDTIME DOUBLE PRECISION);" >> sql_create
echo "create table $PTABLENAME (
      ObjId BIGINT NOT NULL UNIQUE PRIMARY KEY, 
      Owner BIGINT NOT NULL, 
      VersionNr INTEGER NOT NULL, 
      ID INTEGER, 
      TAG INTEGER, 
      SEQNR BIGINT, 
      DATA TEXT, 
      WOID INTEGER, 
      PARMNAME TEXT, 
      ITERATION INTEGER,
      FIT DOUBLE PRECISION, 
      RANK INTEGER,
      STARTFREQ DOUBLE PRECISION,
      ENDFREQ DOUBLE PRECISION,
      STARTTIME DOUBLE PRECISION,
      ENDTIME DOUBLE PRECISION,
      COEFF0 DOUBLE PRECISION,
      COEFF1 DOUBLE PRECISION,
      COEFF2 DOUBLE PRECISION,
      COEFF3 DOUBLE PRECISION);" >> sql_create
$SQLCLIENT < sql_create
