# Find the path used to start the script.
pgmpath=`dirname $0`
pgmpath=`cd $pgmpath > /dev/null 2>&1  &&  pwd`

if test $# != 14; then
  echo "run as:  setupsourcedb-part dummy dummy dummy dummy rank"
  "                                 ms-part filesys ms-part-vds"
  echo "                            lofarroot wd pdbfile pdbname overwrite dry"
  exit 1
fi

shift
shift
shift
shift
seqnr=$1
msn=$2
lroot=$5
wd=$6
srccat=$7
pdb=$8
overwrite=$9
dry=${10}


# Initialize lofar environment.
. $lroot/lofarinit.sh

# Check if a sourcedb name is given.
if test "$pdb" = ""; then
  echo "setupsourcedb-part:empty pdb name given"
  exit 1
fi

# For 'make check' we need to qualify where makesourcedb is.
case "$wd" in
*/test)
  pgmpath=../src/
  ;;
esac

# Set the working directory; derive it if needed.
if test "$wd" = ""  -o  "$wd" = "..."; then
  wd=`dirname "$msn"`
fi
cd $wd  ||  exit 1

# Append to the SourceDB. Delete it first if overwrite is given.
echo "Create $msn/$pdb from $srccat"
if test "$dry" != dry; then
  if test $overwrite = 1; then
    rm -rf $msn/$pdb
  fi
  ${pgmpath}makesourcedb in=$srccat out=$msn/$pdb
fi
