# Find the path used to start the script.
pgmpath=`dirname $0`
pgmpath=`cd $pgmpath > /dev/null 2>&1  &&  pwd`

if test $# != 12; then
  echo "run as:  setupsourcedb-part dummy dummy dummy dummy rank ms-part filesys"
  echo "                            lofarroot pdbfile pdbname overwrite dry"
  exit 1
fi

shift
shift
shift
shift
seqnr=$1
msn=$2
shift
lroot=$3
srccat=$4
pdb=$5
overwrite=$6
dry=$7


# Initialize lofar environment.
. $lroot/lofarinit.sh

# Check if a sourcedb name is given.
if test "$pdb" = ""; then
  echo "setupsourcedb-part:empty pdb name given"
  exit 1
fi

# Get the MS name from the VDS file.
# If an MS name is given, use that.
if test ! -d "$msn"; then
  msn=`getparsetvalue $msn FileName`
fi

# Append to the SourceDB. Delete it first if overwrite is given.
echo "Create $msn/$pdb from $srccat"
if test "$dry" != dry; then
  if $overwrite = 1; then
    rm -rf $msn/$pdb.sky
  fi
  makesourcedb in=$srccat out=$msn/$pdb.sky
fi
