<?xml version="1.0"?>

<xs:complexType name ="IntProperty">
  <xs:sequence>
    <xs:attribute name ="type"            type ="xs:string"    use = optional/>
    <xs:attribute name ="default"        type ="xs:integer"  use = optional/>
    <xs:attribute name ="range-min"   type ="xs:integer"  use = optional/>
    <xs:attribute name ="range-max"  type ="xs:integer"  use = optional/>
  </xs:sequence>
</xs:complexType>

<xs:complexType name ="FloatProperty">
  <xs:sequence>
    <xs:attribute name ="type"            type ="xs:string"  use = optional/>
    <xs:attribute name ="default"        type ="xs:float"    use = optional/>
    <xs:attribute name ="range-min"   type ="xs:float"    use = optional/>
    <xs:attribute name ="range-max"  type ="xs:float"    use = optional/>
  </xs:sequence>
</xs:complexType>

<xs:complexType name ="StatusProperty">
  <xs:sequence>
    <xs:attribute name ="default"        type ="xs:byte" use = optional/>
  </xs:sequence>
</xs:complexType>