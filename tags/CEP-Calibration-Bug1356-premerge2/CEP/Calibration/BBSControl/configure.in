dnl
dnl Process this file with autoconf to produce a configure script.
dnl Do not define VERSION, etc. in config.h.
dnl
AC_INIT
AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(BBSControl, 1.0, no-define)

dnl Initialize for LOFAR (may set compilers)
lofar_INIT

dnl Checks for programs.
AC_PROG_CC
AC_PROG_CXX
AC_PROG_INSTALL
AC_PROG_LN_S
AC_DISABLE_SHARED
AC_PROG_LIBTOOL

dnl Checks for header files.
AC_HEADER_STDC

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_SIZE_T

dnl
dnl Check for LOFAR specific things
dnl
lofar_GENERAL
lofar_MPI

lofar_INTERNAL(LCS/Common,Common,,1,Common/LofarTypes.h)
lofar_INTERNAL(LCS/Blob,Blob,,1,Blob/BlobHeader.h)
lofar_INTERNAL(LCS/Transport,Transport,,1,Transport/TransportHolder.h)
lofar_INTERNAL(LCS/ACC/PLC,PLC,,1,PLC/ProcessControl.h)
lofar_INTERNAL(CEP/MWCommon,MWCommon,,1,MWCommon/VdsDesc.h)
lofar_INTERNAL(CEP/Calibration/BBSKernel,BBSKernel,,1,BBSKernel/Evaluator.h)

lofar_EXTERNAL(boost,1,boost/logic/tribool.hpp,"")
lofar_EXTERNAL(pgsql,1,pgsql/libpq-fe.h,pq)
lofar_EXTERNAL(pqxx,1,pqxx/pqxx, pqxx)

lofar_AIPSPP(1,"-lmeasures -ltables -lscimath -lscimath_f -lcasa")

dnl
dnl Output Makefiles
dnl
AC_CONFIG_FILES([test/runctest.sh:autoconf_share/runctest.sh.in],
                [chmod +x test/runctest.sh])
AC_OUTPUT(
include/Makefile
include/BBSControl/Makefile
src/Makefile
test/Makefile
Makefile
BBSControl.spec
)
