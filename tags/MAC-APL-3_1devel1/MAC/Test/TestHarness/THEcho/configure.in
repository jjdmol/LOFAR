dnl
dnl Process this file with autoconf to produce a configure script.
dnl
AC_INIT(src/THEcho.h)
AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(THEcho, 1.0)

dnl Initialize for LOFAR (may set compilers)
lofar_INIT

dnl Checks for programs.
AC_PROG_AWK
AC_PROG_YACC
AC_PROG_CC
AC_PROG_CXX
AM_PROG_LEX
AC_PROG_INSTALL
AC_PROG_LN_S
AC_DISABLE_SHARED
AC_PROG_LIBTOOL

dnl Checks for libraries.

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_SIZE_T

dnl Checks for library functions.
AC_FUNC_VPRINTF

dnl
dnl Check for LOFAR specific things
dnl
lofar_DEBUG_OPTIMIZE
lofar_QATOOLS
lofar_DOCXX
lofar_MPI(0)
lofar_INTERNAL(LCS/Common, Common, LCS-Common-2_0, 1, Common/LofarTypes.h,,)
lofar_EXTERNAL(log4cplus,1,log4cplus/logger.h,,)
lofar_INTERNAL(MAC/GCF/GCFCommon, gcfcommon, MAC-GCF-4_2alpha3, 1, GCF/GCF_Defines.h,,)
lofar_INTERNAL(MAC/GCF/TM, gcftm, MAC-GCF-4_2alpha3, 1, GCF/TM/GCF_Task.h,,)
lofar_PACKAGE(MAC/Test/Suite)

                       
dnl
dnl Output Makefiles
dnl
AC_OUTPUT(
src/Makefile
test/Makefile
Makefile
)
