#!/bin/sh

cwd=`pwd`
echo "tVdsMaker ..."
./tVdsMaker || exit 1
# Remove system specific work directory from output.
sed -e "s%$cwd/%%" tVdsMaker_tmp.ms.vds

echo ""
echo "combinevds ..."
../src/combinevds tVdsMaker_tmp.ms.gds tVdsMaker_tmp.ms.vds || exit 1
# Remove system specific work directory from output.
sed -e "s%$cwd/%%" tVdsMaker_tmp.ms.gds
exit 0
