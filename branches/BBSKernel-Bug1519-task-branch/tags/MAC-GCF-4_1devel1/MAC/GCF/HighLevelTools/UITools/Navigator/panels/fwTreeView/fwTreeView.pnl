 "//call sOnExpand or sOnCollapse
int id;
main()
{
	int pos; //item position in the tree view (=list)
	int index; //tree array index
	int treeViewPos;
	
	//store current selected position in the tree view
	getValue(\"\", \"selectedPos\", treeViewPos);

	setValue(\"\", \"enabled\", FALSE);

	getValue(\"\", \"selectedPos\", pos);

	if(pos > 0)
	{
		index = fwTreeView_view2TreeIndex(pos);
		if(fwTreeView_getNode(index)[fwTreeView_STATE] & fwTreeView_EXPANDED)
		{	
			// the folder is expanded => needs to be collapsed
			//DebugN(\"sOnCollapse\", $sOnCollapse);
			id = startThread($sOnCollapse == \"\" ? \"fwTreeView_defaultCollapse\": $sOnCollapse, index);
			while(id != -1)
				delay(0,100);
		}
		else
		{ // the folder is collapsed
			if(fwTreeView_getNode(index)[fwTreeView_STATE] & fwTreeView_BRANCH)
			{
				// the folder is a branch => to expand
				//DebugN(\"sOnExpand\");
				id = startThread($sOnExpand == \"\" ? \"fwTreeView_defaultExpand\": $sOnExpand, index);
				while(id != -1)
					delay(0,100);
			}	
		}
	}
	//	fwTreeView_draw(tree);
	fwTreeView_draw();
	//restore selected position in tree view:
	setValue(\"\", \"selectedPos\", treeViewPos);
	setValue(\"\", \"enabled\", TRUE);
}" 0

