int criticalSection(){
	int treeIndex;
	//if doesn't exist create '_trees_AWqOe1L6' tree array:
	if(addGlobal(\"_trees_AWqOe1L6\", DYN_ANYTYPE_VAR)==0){
			//_trees_AWqOe1L6 variable didn't exist:
			// => need to be initialized;
		//offset: (when a tree is cleared from _trees_AWqOe1L6 then offset is
		//            decremented.)
		// be aware: offset need to be a SIGNED integer.
		_trees_AWqOe1L6[1] = 2 ;
		//next index: next tree will be put in _trees_AWqOe1L6[offset+index]
		// (when a tree is deleted from _trees_AWqOe1L6, the indexes doesn't
		// need to be updated since this is offset which is decremented)
		// be aware: index must be a SIGNED integer.
		_trees_AWqOe1L6[2] = 1;
	}
	//get an index in _trees_AWqOe1L6 and store it on the panel
	treeIndex = _trees_AWqOe1L6[2]++;
	fwTreeView_newTree(treeIndex);
	setValue(\"TreeArrayIndex\",\"text\", treeIndex);
	return 0;
}	" 0

