autogen definitions protocol;

description = "Protocol for LogicalDevice servers";
prefix = "LOGICALDEVICE"; // for the signal names
id = "(LOFAR::GCF::TM::F_APL_PROTOCOL+1)";

// specify extra include files
// e.g.
include = '<sys/time.h>';

prelude = << PRELUDE_END
// define namespace and enumerations here

PRELUDE_END;

//
// An "event" has a "signal" and a "dir" (direction)
// and zero or more "param"s.
// "dir" can be one of "IN" or "OUT".
// A "param" has a "name" and a "type".
//
event = {
	signal = SCHEDULE;
	dir = IN;
	param = {
		name = "name";
		type = "string";
	};
};

event = {
	signal = INITIALIZED;
	dir = OUT;
};

event = {
	signal = CLAIM;
	dir = IN;
};

event = {
	signal = CLAIMED;
	dir = OUT;
};

event = {
	signal = PREPARE;
	dir = IN;
	param = {
		name = "parameters";
		type = "string";
	};
};

event = {
	signal = PREPARED;
	dir = OUT;
};

event = {
	signal = RESUME;
	dir = IN;
};

event = {
	signal = RESUMED;
	dir = OUT;
};

event = {
	signal = SUSPEND;
	dir = IN;
};

event = {
	signal = SUSPENDED;
	dir = OUT;
};

event = {
	signal = RELEASE;
	dir = IN;
};

event = {
	signal = RELEASED;
	dir = OUT;
};

