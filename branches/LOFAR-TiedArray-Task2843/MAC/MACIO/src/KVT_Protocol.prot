autogen definitions protocol;

description	= "Protocol for sending Key-Value-Time triples to the KeyValueLogger";
prefix		= "KVT"; // for the signal names
id 			= "(LOFAR::MACIO::F_GCF_PROTOCOL + 1)";

// specify extra include files
include = '<MACIO/StringVector.h>';
include = '<MACIO/DoubleVector.h>';

prelude = << PRELUDE_END

//	REGISTER 	  	 (uint obsID, string	name);
//	REGISTER_ACK	 (uint obsID, string	name);
//	SEND_MSG		 (int seqnr, string key, string value, double	secsEpoch1970);
//	SEND_MSG_ACK	 (int seqnr, uint result);
//	SEND_MSG_POOL	 (int seqnr, uint nrMsgs, strVector key, strVector value, dblVector time);
//	SEND_MSG_POOL_ACK(int seqnr, uint result);

PRELUDE_END;

// An "event" has a "signal" and a "dir" (direction)
// and zero or more "param"s.
// "dir" can be one of "IN" or "OUT".
// A "param" has a "name" and a "type".
//

event = {
	signal = REGISTER;
	dir = IN;
	param = {
		name = "obsID";
		type = "uint32";
	};
	param = {
		name = "name";
		type = "string";
	};
};

event = {
	signal = REGISTER_ACK;
	dir = OUT;
	param = {
		name = "obsID";
		type = "uint32";
	};
	param = {
		name = "name";
		type = "string";
	};
};

event = {
	signal = SEND_MSG;
	dir = IN;
	param = {
		name = "seqnr";
		type = "int32";
	};
	param = {
		name = "key";
		type = "string";
	};
	param = {
		name = "value";
		type = "string";
	};
	param = {
		name = "timestamp";
		type = "double";
	};
};

event = {
	signal = SEND_MSG_ACK;
	dir = OUT;
	param = {
		name = "seqnr";
		type = "int32";
	};
	param = {
		name = "result";
		type = "uint32";
	};
};

event = {
	signal = SEND_MSG_POOL;
	dir = IN;
	param = {
		name = "seqnr";
		type = "int32";
	};
	param = {
		name = "nrElements";
		type = "uint32";
	};
	param = {
		name = "keys";
		type = "MACIO::StringVector";
		userdefined;
		printable;
	};
	param = {
		name = "values";
		type = "MACIO::StringVector";
		userdefined;
		printable;
	};
	param = {
		name = "times";
		type = "MACIO::DoubleVector";
		userdefined;
		printable;
	};
};

event = {
	signal = SEND_MSG_POOL_ACK;
	dir = OUT;
	param = {
		name = "seqnr";
		type = "int32";
	};
	param = {
		name = "result";
		type = "uint32";
	};
};

