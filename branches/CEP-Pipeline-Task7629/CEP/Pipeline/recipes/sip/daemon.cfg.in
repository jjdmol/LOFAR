[DEFAULT]
lofarroot 			= @CMAKE_INSTALL_PREFIX@
pythonpath 			= @PYTHON_INSTALL_DIR@
working_directory 	= /data/scratch/$ENV{USER}

busname 			= $ENV{USER}_pipelineBus
# Default broker port == 5672
broker_port         = 5672                      
deadletter 			= %(busname)s.deadletter

# The following directory must exist:
log_root            = /data/scratch/$ENV{USER}/log

[slave_cqdaemon]
command_queue_topic_template = pipelineSlaveCommandQueue_{0}
command_queue_template 	= %(busname)s/pipelineSlaveCommandQueue_{0}

deadletter_log_path 	= %(log_root)s/pipelineSlaveDeadletter.log
logfile 				= %(log_root)s/pipelineSlaveCQDaemon.log   

# Control the how long between loops of the daemon (rate limitter) in seconds.
# actual processing time is substracted from this duration 
loop_interval 					= 1

# How often msg received on a deadletterqueue are attempted 
#( max_repost * loop_interval 	= time services can be unconnected before failure is asumed)
max_repost = 5

[master_cqdaemon]
command_queue 	= %(busname)s/pipelineMasterCommandQueue
deadletter_log_path 	= %(log_root)s/pipelineMasterDeadletter.log
logfile 				= %(log_root)s/pipelineMasterCQDaemon.log

loop_interval 			= 1
max_repost 				= 5

[daemon_hosts]
master_host		= locus102
#slave_hosts_type = static
#slave_hosts		 = 
# To define a range of hosts:
slave_hosts_type = range
slave_root = locus
range_min = 98
range_max = 99