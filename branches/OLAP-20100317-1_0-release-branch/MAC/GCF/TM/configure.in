dnl
dnl Process this file with autoconf to produce a configure script.
dnl
AC_INIT(include/GCF/TM/GCF_Task.h)
AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(GCFTM, 6.1, no-define)

dnl Initialize for LOFAR (may set compilers)
lofar_INIT

dnl Checks for programs.
AC_PROG_AWK
AC_PROG_YACC
AC_PROG_CC
AC_PROG_CXX
AM_PROG_LEX
AC_PROG_INSTALL
AC_PROG_LN_S
AC_DISABLE_SHARED
AC_PROG_LIBTOOL

dnl Checks for libraries.

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_SIZE_T

dnl Checks for library functions.
AC_FUNC_VPRINTF

dnl
dnl Check for LOFAR specific things
dnl
lofar_GENERAL
lofar_INTERNAL(LCS/Common, Common, , 1, Common/LofarTypes.h,,)
lofar_INTERNAL(MAC/MACIO, MACIO, , 1, MACIO/MACServiceInfo.h,,)

dnl
dnl Output Makefiles
dnl
AC_CONFIG_FILES([test/runctest.sh:autoconf_share/runctest.sh.in],
                [chmod +x test/runctest.sh])
AC_OUTPUT(
src/Makefile
test/Makefile
include/Makefile
include/GCF/TM/Makefile
Makefile
GCFTM.spec
)
